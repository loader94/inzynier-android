<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#2b2929"
    android:textColor="#FFFFFF">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etDokogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Nazwa użytkownika"
        android:textColor="#FFFFFF"
        android:textColorHint="#a7a7a7"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etTemat"
        android:layout_below="@+id/etDokogo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Temat"
        android:textColor="#FFFFFF"
        android:textColorHint="#a7a7a7"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etMsg"
        android:layout_below="@+id/etTemat"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Wiadomość"
        android:textColor="#FFFFFF"
        android:textColorHint="#a7a7a7"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyślij"
        android:id="@+id/bWyslij"
        android:layout_below="@+id/etMsg"
        android:textColor="#FFFFFF"
        android:background="#F55036"
        android:padding="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Powrót"
        android:id="@+id/bPowrot"
        android:layout_below="@+id/bWyslij"
        android:textColor="#FFFFFF"
        android:background="#F55036"
        android:padding="16dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>